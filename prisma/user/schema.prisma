generator client {
  provider = "prisma-client-js"
  output = "./generated/userDataClient"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL_USER")
}

model Users {
  id         Int         @id @default(autoincrement())
  loginId    String      @unique
  password   String
  nickname   String      @unique
  createdAt  DateTime       @default(now()) @map("created_date")
  updatedAt  DateTime?      @updatedAt @map("updated_date")
  gameLogs  GameLog[]      @relation("UserGameLogs")
}

model GameLog {
  id         Int         @id @default(autoincrement())
  userId     Int          
  score      Int
  playedAt  DateTime       @default(now()) @map("created_date")

  user      Users       @relation("UserGameLogs", fields: [userId], references: [id])
}